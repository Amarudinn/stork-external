# Stork External Environment Variables
# Copy this file to .env and fill in your actual values

# Stork API Configuration
STORK_API_KEY=your-stork-api-key-here
STORK_WEBSOCKET_URL=wss://api.jp.stork-oracle.network
STORK_PUBLISHER_ID=your-publisher-id-here

# Private Keys (use secure key management in production)
STORK_PRIVATE_KEY=your-private-key-here
STORK_PUBLIC_KEY=your-public-key-here

# Chain Configuration
# EVM
EVM_RPC_URL=https://your-evm-rpc-url
EVM_CONTRACT_ADDRESS=0xacc0a0cf13571d30b4b8637996f5d6d774d4fd62
EVM_CHAIN_ID=1

# Solana
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_PROGRAM_ID=your-solana-program-id

# Fuel
FUEL_RPC_URL=https://mainnet.fuel.network/v1/graphql
FUEL_CONTRACT_ADDRESS=your-fuel-contract-address

# Data Provider Configuration
DATA_PROVIDER_PORT=8080
DATA_PROVIDER_HOST=localhost
DATA_PROVIDER_LOG_LEVEL=info

# Publisher Agent Configuration
PUBLISHER_AGENT_PORT=8081
PUBLISHER_AGENT_HOST=localhost

# Chain Pusher Configuration
CHAIN_PUSHER_BATCH_SIZE=5
CHAIN_PUSHER_UPDATE_FREQUENCY=10s

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
